<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.free.your_mind.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/intro_fragment">
        <action
            android:id="@+id/action_introFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.free.your_mind.TaskFragment"
        android:label="task_fragment"
        tools:layout="@layout/task_fragment" />
</navigation>